<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cover"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        android:layout_marginEnd="1117dp"
        android:layout_marginRight="1117dp"
        android:layout_marginBottom="1dp"
        app:srcCompat="@drawable/kiri" />

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="20dp"

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        android:layout_marginEnd="1122dp"
        android:layout_marginRight="1122dp"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/iconlogin" />

    <TextView
        android:id="@+id/logIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="530dp"
        android:layout_marginRight="530dp"
        android:layout_marginBottom="500dp"
        android:fontFamily="serif"
        android:text="Log In"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="60sp" />


    <TextView
        android:id="@+id/username"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="530dp"
        android:layout_marginRight="530dp"
        android:layout_marginBottom="375dp"
        android:fontFamily="serif-monospace"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/username2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="530dp"
        android:layout_marginRight="530dp"
        android:layout_marginBottom="325dp"
        android:fontFamily="serif-monospace"
        android:text="username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F8F4F4"
        android:textSize="38sp" />


    <TextView
        android:id="@+id/password"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="530dp"
        android:layout_marginRight="530dp"
        android:layout_marginBottom="250dp"
        android:fontFamily="serif-monospace"
        android:text="Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="530dp"
        android:layout_marginRight="530dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="serif-monospace"
        android:text="Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F4F0F0"
        android:textSize="38sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

    <Button
        android:id="@+id/LogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="490dp"
        android:layout_marginRight="490dp"
        android:layout_marginBottom="67dp"
        android:fontFamily="monospace"
        android:text="Log In"
        android:textSize="60sp" />

</RelativeLayout>
